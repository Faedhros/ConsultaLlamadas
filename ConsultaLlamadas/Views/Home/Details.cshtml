@model List<ConsultaLlamadas.Models.DetalleLlamadas>

@{
    if (Session["personId"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles</title>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <style>
        .paginador {
            margin-left: 50%;
        }
    </style>


</head>
<body>
    <header class="d-flex p-3  justify-content-between   text-md shadow-sm mb-4">


        <div class="d-flex ">
            <a href="~/Home/Index"> Volver</a>

        </div>


        <div class="d-flex m-1">

            <a class="text-decoration-underline  m-auto mx-auto" href="@Url.Action("LogOut","Login")">Cerrar sesión</a>


        </div>
    </header>
    <div class="mb-3 border-bottom">
        <h3>Detalles</h3>
    </div>

     

    <div class="row ">
        <table class="table" id="table_id">
            <tr class="text-center">

                <th>Celular</th>
                <th>Descripción</th>
                <th>Número marcado</th>
                <th>Fecha</th>
                <th>Duración de llamada</th>
                <th>Costo</th>
            </tr>

            @foreach (var item in Model)
            {
        <tr class="text-center">
            <td>@item.MobileLine</td>
            <td>@item.CalledPartyDescription</td>
            <td>@item.CalledPartyNumber</td>
            <td>@item.DateTime </td>         
            <td>@item.Duration</td>
            <td>@item.TotalCost</td>

        </tr>
            }
        </table>
    </div>

    <div class="paginador">
        @if (ViewBag.Page > 0)
        {
            <a href="@Url.Action("Details", new { page = ViewBag.Page - 1 })"
               class="btn btn-default">
                &laquo; Prev
            </a>
        }
        @if (ViewBag.Page < ViewBag.MaxPage)
        {
            <a href="@Url.Action("Details", new { page = ViewBag.Page + 1 })"
               class="btn btn-default">
                Next &raquo;
            </a>
        }
    </div>
</body>
</html>
